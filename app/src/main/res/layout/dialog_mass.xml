<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="起点："
            />
        <EditText
            android:id="@+id/et_massstartcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="城市"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="到"
            />
        <EditText
            android:id="@+id/et_massstartplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="对应的地点"
            android:textColor="#000000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="终点："
            />
        <EditText
            android:id="@+id/et_massendcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="城市"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:text="到"
            />
        <EditText
            android:id="@+id/et_massendplace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="对应的地点"
            android:textColor="#000000"
            />
    </LinearLayout>
</LinearLayout>